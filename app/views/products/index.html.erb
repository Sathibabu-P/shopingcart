<h3 class="text-center">Products for Sale</h3>

<div class="row">
  <div class="col-xs-12">
  	<% if @products.size == 0 %>
     <p class="text-center">
    There are no items in your shopping .  
  </p>
      <% else %>
     
  <% @products.each do |product| %>
      <%= render "product_row", product: product, order_item: @order_item %>
    <% end %>
       <% end %>
  </div>
</div>